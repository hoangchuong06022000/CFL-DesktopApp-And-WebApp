@model Model.Model.DANGKY

@{
    ViewBag.Title = "FillData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddThiSinh", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })        
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="form-group">
                        <label>CMND/CCCD</label>
                        @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control", @id = "cmnd" } })
                        @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                    </div>
                    @Html.HiddenFor(model => model.MAKHOA)
                    @Html.HiddenFor(model => model.TRINHDO)
                    <div class="form-group">
                        <label>Ngày Cấp</label>
                        @Html.EditorFor(model => model.THISINH.NGAYCAP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.NGAYCAP, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nơi Cấp</label>
                        @Html.EditorFor(model => model.THISINH.NOICAP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.NOICAP, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Họ Tên</label>
                        @Html.EditorFor(model => model.THISINH.HOTEN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.HOTEN, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Giới Tính</label>
                        @Html.EditorFor(model => model.THISINH.GIOITINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.GIOITINH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Ngày Sinh</label>
                        @Html.EditorFor(model => model.THISINH.NGAYSINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.NGAYSINH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Nơi Sinh</label>
                        @Html.EditorFor(model => model.THISINH.NOISINH, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.NOISINH, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Số Điện Thoại</label>
                        @Html.EditorFor(model => model.THISINH.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.SDT, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.EditorFor(model => model.THISINH.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THISINH.EMAIL, "", new { @class = "text-danger" })
                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <a href="@Url.Action("Index", "Home")" class="add"><button type="button" class="btn">Huỷ</button></a>
                            <input type="submit" value="Đăng Ký" class="btn btn-default" style="background-color: #51bcda;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

