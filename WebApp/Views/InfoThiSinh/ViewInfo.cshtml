@model List<Model.Model.DSTHISINHTHEOPHONG>
@{
    ViewBag.Title = "ViewInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="sidebar" data-color="white" data-active-color="danger">
    <div class="logo">
        <a href="https://localhost:44352/" class="simple-text logo-mini">
            <div class="logo-image-small">
                <img src="../assets/img/logo-small.png">
            </div>
        </a>
        <a href="https://localhost:44352/" class="simple-text logo-normal">
            TT NGOẠI NGỮ
        </a>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">
            <li class="active-pro">
                <a href="https://localhost:44352/">
                    <i class='fa fa-sign-in'></i>
                    <p>Đăng ký thi</p>
                </a>
            </li>
            <li class="active">
                <a href="https://localhost:44352/InfoThiSinh/Search">
                    <i class='fa fa-info'></i>
                    <p>Thông tin thí sinh</p>
                </a>
            </li>
            <li class="active-pro">
                <a href="https://localhost:44352/Certification/Search">
                    <i class='fa fa-certificate'></i>
                    <p>Chứng nhận</p>
                </a>
            </li>
            <li class="active-pro">
                <a href="https://localhost:44352/Examinee/Examinee">
                    <i class='fa fa-list'></i>
                    <p>DS thí sinh dự thi</p>
                </a>
            </li>
            <li class="active-pro">
                <a href="https://localhost:44352/Statictic/Statictic">
                    <i class="fa fa-line-chart"></i>
                    <p>Thống kê</p>
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <div class="navbar-toggle">
                    <button type="button" class="navbar-toggler">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="javascript:;">THÔNG TIN THÍ SINH</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
                <span class="navbar-toggler-bar navbar-kebab"></span>
            </button>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="content" style="margin-top:110px">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("ViewInfo", "InfoThiSinh", FormMethod.Post))
                        {
                            <input type="text" name="strSearch" placeholder="Tìm kiếm..." value="@ViewBag.StrSearch" />
                            <button type="submit" class="btn btn-default"><i class="nc-icon nc-zoom-split"></i></button>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="card card-plain">
                    <div class="card-header">
                        <h4 class="card-title">Thông Tin Thí Sinh</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" style="overflow-y: scroll; overflow-x: scroll; height:100%; width: 100%; display: block; overflow: auto">
                            <table class="table">
                                <thead class=" text-primary">
                                    <th>Họ Tên</th>
                                    <th>SĐT</th>
                                    <th>Số Báo Danh</th>
                                    <th>Phòng Thi</th>
                                    <th>Điểm Nghe</th>
                                    <th>Điểm Nói</th>
                                    <th>Điểm Đọc</th>
                                    <th>Điểm Viết</th>
                                </thead>
                                <tbody>
                                    @foreach (Model.Model.DSTHISINHTHEOPHONG thiSinh in Model)
                                    {
                                        <tr>
                                            <td>@thiSinh.THISINH.HOTEN</td>
                                            <td>@thiSinh.THISINH.SDT</td>
                                            <td>@thiSinh.SBD</td>
                                            <td>@thiSinh.PHONGTHI.TENPHONG</td>
                                            <td>@thiSinh.DIEMNGHE</td>
                                            <td>@thiSinh.DIEMNOI</td>
                                            <td>@thiSinh.DIEMDOC</td>
                                            <td>@thiSinh.DIEMVIET</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
